{
  "extends": "expo/tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "/*": ["app/*"],
      "components/*": ["src/components/*"],
      "assets/*": ["src/assets/*"],
      "constants/*": ["src/constants/*"],
      "hooks/*": ["src/hooks/*"],
      "utils/*": ["src/utils/*"],
      "theme/*": ["src/theme/*"],
      "zustand/*": ["src/zustand/*"],
      "localization/*": ["src/localization/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
